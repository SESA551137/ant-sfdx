<?xml version="1.0" encoding="UTF-8"?>

<project name="DisplayTaskTest" basedir="." xmlns:force-org="antlib:com.mcartoixa.ant.sfdx.force.org">
  <condition property="sfdx-path" value="..\..\sfdx.cmd" else="../../sfdx">
    <os family="dos" />
  </condition>

  <target name="init">
    <taskdef name="org-display" classname="com.mcartoixa.ant.sfdx.force.org.DisplayTask" classpath="tmp/obj/classes" />
  </target>

  <target name="execute" depends="init">
    <org-display statusproperty="execute.status" resultproperty="execute.result" executable="${sfdx-path}" />
  </target>
</project>
